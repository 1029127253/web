		<servlet-class>pers.husen.web.servlet.userinfo.UserLoginValidateServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>userLoginValidateServlet</servlet-name>
		<url-pattern>/userLoginValidate</url-pattern>
	</servlet-mapping>
