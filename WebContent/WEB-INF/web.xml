		<servlet-name>codeLibTotalCountServlet</servlet-name>
		<servlet-class>pers.husen.web.servlet.codelib.CodeLibTotalCountServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>codeLibTotalCountServlet</servlet-name>
		<url-pattern>/codeLibTotalCount</url-pattern>
	</servlet-mapping>
	<description>查询某页的代码库</description>
