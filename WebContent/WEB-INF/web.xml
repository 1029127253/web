		<servlet-class>pers.husen.web.servlet.releasefea.NewReleaseFeatureServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>newReleaseFeatureServlet</servlet-name>
		<url-pattern>/newReleaseFeature</url-pattern>
	</servlet-mapping>
