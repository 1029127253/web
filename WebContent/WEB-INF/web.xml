		<servlet-name>codePerByIdServlet</servlet-name>
		<servlet-class>pers.husen.web.servlet.codelib.CodePerByIdServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>codePerByIdServlet</servlet-name>
		<url-pattern>/codePerById</url-pattern>
	</servlet-mapping>
