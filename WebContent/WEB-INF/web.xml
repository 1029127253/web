<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="WebApp_ID" version="3.0">
	<display-name>web</display-name>
	<description>默认欢迎列表</description>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>
	<description>设置session的有效时间(分钟)</description>
	<session-config>
		<session-timeout>10</session-timeout>
	</session-config>
	<description>初始化路径的配置和log4j配置</description>
	<listener>
		<listener-class>pers.husen.web.listener.WebInitConfigListener</listener-class>
	</listener>
	<description>监听session,实现在线人数统计</description>
	<listener>
		<listener-class>pers.husen.web.listener.OnlineCountListener</listener-class>
	</listener>
	<description>查询所有博客</description>
	<servlet>
		<servlet-name>blogArticleServlet</servlet-name>
		<servlet-class>pers.husen.web.servlet.blog.BlogArticleServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>blogArticleServlet</servlet-name>
		<url-pattern>/blogArticle</url-pattern>
	</servlet-mapping>
	<description>查询所有博客数量</description>
	<servlet>
		<servlet-name>blogTotalCountServlet</servlet-name>
		<servlet-class>pers.husen.web.servlet.blog.BlogTotalCountServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>blogTotalCountServlet</servlet-name>
		<url-pattern>/blogTotalCount</url-pattern>
	</servlet-mapping>
	<description>查询一页的博客</description>
	<servlet>
		<servlet-name>blogArticlePerPageServlet</servlet-name>
		<servlet-class>pers.husen.web.servlet.blog.BlogArticlePerPageServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>blogArticlePerPageServlet</servlet-name>
		<url-pattern>/blogArticlePerPage</url-pattern>
	</servlet-mapping>
	<description>根据Id查询博客</description>
	<servlet>
		<servlet-name>blogPerByIdServlet</servlet-name>
		<servlet-class>pers.husen.web.servlet.blog.BlogPerByIdServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>blogPerByIdServlet</servlet-name>
		<url-pattern>/blogPerById</url-pattern>
	</servlet-mapping>
	<description>上传新博客</description>
	<servlet>
		<servlet-name>newBlogUploadServlet</servlet-name>
		<servlet-class>pers.husen.web.servlet.blog.NewBlogUploadServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>newBlogUploadServlet</servlet-name>
		<url-pattern>/newBlogUpload</url-pattern>
	</servlet-mapping>
	<description>获取留言区内容</description>
	<servlet>
		<servlet-name>messageGet</servlet-name>
		<servlet-class>pers.husen.web.servlet.message.MessageGetServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>messageGet</servlet-name>
		<url-pattern>/messageGetServlet</url-pattern>
	</servlet-mapping>
	<description>留言区上传</description>
	<servlet>
		<servlet-name>messageUploadServlet</servlet-name>
		<servlet-class>pers.husen.web.servlet.message.MessageUploadServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>messageUploadServlet</servlet-name>
		<url-pattern>/messageUpload</url-pattern>
	</servlet-mapping>
	<description>提交新注册的用户信息</description>
	<servlet>
		<servlet-name>userInfoRegisterServlet</servlet-name>
		<servlet-class>pers.husen.web.servlet.userinfo.UserInfoRegisterServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>userInfoRegisterServlet</servlet-name>
		<url-pattern>/userInfoRegister</url-pattern>
	</servlet-mapping>
	<description>用户登录验证</description>
	<servlet>
