		<servlet-name>newCodeUploadServlet</servlet-name>
		<servlet-class>pers.husen.web.servlet.codelib.NewCodeUploadServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>newCodeUploadServlet</servlet-name>
		<url-pattern>/newCodeUpload</url-pattern>
	</servlet-mapping>
