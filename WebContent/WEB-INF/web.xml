	<servlet>
		<servlet-name>codeLibraryServlet</servlet-name>
		<servlet-class>pers.husen.web.servlet.codelib.CodeLibraryServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>codeLibraryServlet</servlet-name>
		<url-pattern>/codeLibrary</url-pattern>
	</servlet-mapping>
