	</servlet>
	<servlet-mapping>
		<servlet-name>latestReleaseFeatureServlet</servlet-name>
		<url-pattern>/latestReleaseFeature</url-pattern>
	</servlet-mapping>
	<description>获取网站访问统计</description>
	<servlet>
		<servlet-name>accessAtatisticsServlet</servlet-name>
		<servlet-class>pers.husen.web.servlet.common.AccessAtatisticsServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>accessAtatisticsServlet</servlet-name>
		<url-pattern>/accessAtatistics</url-pattern>
	</servlet-mapping>
