	<servlet>
		<servlet-name>codeContentServlet</servlet-name>
		<servlet-class>pers.husen.web.servlet.codelib.CodeContentServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>codeContentServlet</servlet-name>
		<url-pattern>/codeContent</url-pattern>
	</servlet-mapping>
	<description>联系站长</description>
	<servlet>
		<servlet-name>sendEmailServlet</servlet-name>
		<servlet-class>pers.husen.web.servlet.contact.SendEmailServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>sendEmailServlet</servlet-name>
